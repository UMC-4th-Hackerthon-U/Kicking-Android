<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/best_battle_title_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/best_logo_iv"
                    android:layout_width="90dp"
                    android:layout_height="23dp"
                    android:src="@drawable/logo_kicking"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/best_magnifier_iv"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/magnifier_white"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/best_alarm_iv"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/best_alarm_iv"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/bell_white"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="13dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
    </androidx.constraintlayout.widget.ConstraintLayout>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/best_battle_title_cl"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/best_battle_cl"
                        android:background="@drawable/best_round_rectangle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/best_battle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="흑역사 배틀"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/best_battle_frame_red_iv"
                    android:layout_width="145dp"
                    android:layout_height="120dp"
                    android:src="@drawable/best_battle_red_frame"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@id/best_battle_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/best_battle_vs_tv"
                    />



                        <ImageView
                            android:id="@+id/best_battle_profile_iv"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/basic_profile_01"
                            app:layout_constraintTop_toTopOf="@id/best_battle_frame_red_iv"
                            app:layout_constraintStart_toStartOf="@id/best_battle_frame_red_iv"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/king_nickname_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="닉네임"
                            android:textColor="#000000"
                            android:textSize="11sp"
                            android:layout_marginStart="7dp"
                            app:layout_constraintStart_toEndOf="@id/best_battle_profile_iv"
                            app:layout_constraintTop_toTopOf="@id/best_battle_profile_iv"
                            app:layout_constraintBottom_toBottomOf="@id/best_battle_profile_iv"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/king_contents_tv"
                            android:layout_width="120dp"
                            android:layout_height="36dp"
                            android:text="내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니"
                            android:textSize="11sp"
                            android:textColor="#474747"
                            android:layout_marginTop="6dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="12dp"
                            app:layout_constraintStart_toStartOf="@id/best_battle_frame_red_iv"
                            app:layout_constraintEnd_toEndOf="@id/best_battle_frame_red_iv"
                            app:layout_constraintTop_toBottomOf="@id/best_battle_profile_iv"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/best_battle_more_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:text="더보기"
                            android:textColor="#FD2A0C"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintStart_toStartOf="@id/best_battle_frame_red_iv"
                            app:layout_constraintEnd_toEndOf="@id/best_battle_frame_red_iv"
                            app:layout_constraintBottom_toBottomOf="@id/best_battle_frame_red_iv"
                            />






                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/best_battle_vs_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vs"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    app:layout_constraintTop_toTopOf="@id/best_battle_frame_red_iv"
                    app:layout_constraintBottom_toBottomOf="@id/best_battle_frame_red_iv"
                    app:layout_constraintStart_toEndOf="@id/best_battle_frame_red_iv"
                    app:layout_constraintEnd_toStartOf="@id/best_battle_frame_green_iv"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/best_battle_frame_green_iv"
                    android:layout_width="145dp"
                    android:layout_height="120dp"
                    android:src="@drawable/best_battle_green_frame"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@id/best_battle_tv"
                    app:layout_constraintStart_toStartOf="@id/best_battle_vs_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    />



                        <ImageView
                            android:id="@+id/best_battle_profile_02_iv"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/basic_profile_01"
                            app:layout_constraintTop_toTopOf="@id/best_battle_frame_green_iv"
                            app:layout_constraintStart_toStartOf="@id/best_battle_frame_green_iv"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/king_nickname_02_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="닉네임"
                            android:textColor="#000000"
                            android:textSize="11sp"
                            android:layout_marginStart="7dp"
                            app:layout_constraintStart_toEndOf="@id/best_battle_profile_02_iv"
                            app:layout_constraintTop_toTopOf="@id/best_battle_profile_02_iv"
                            app:layout_constraintBottom_toBottomOf="@id/best_battle_profile_02_iv"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/king_contents_02_tv"
                            android:layout_width="120dp"
                            android:layout_height="36dp"
                            android:text="내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니다 내용입니"
                            android:textSize="11sp"
                            android:textColor="#474747"
                            android:layout_marginTop="6dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="12dp"
                            app:layout_constraintStart_toStartOf="@id/best_battle_frame_green_iv"
                            app:layout_constraintEnd_toEndOf="@id/best_battle_frame_green_iv"
                            app:layout_constraintTop_toBottomOf="@id/best_battle_profile_02_iv"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/best_battle_more_02_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:text="더보기"
                            android:textColor="#FD2A0C"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintStart_toStartOf="@id/best_battle_frame_green_iv"
                            app:layout_constraintEnd_toEndOf="@id/best_battle_frame_green_iv"
                            app:layout_constraintBottom_toBottomOf="@id/best_battle_frame_green_iv"
                            />




                        <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/best_battle_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="13dp"
                    android:src="@drawable/battle_btn"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/best_battle_frame_red_iv"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="투표하러 가기"
                    android:textColor="#ffffff"
                    app:layout_constraintStart_toStartOf="@id/best_battle_btn"
                    app:layout_constraintTop_toTopOf="@id/best_battle_btn"
                    app:layout_constraintEnd_toEndOf="@id/best_battle_btn"
                    app:layout_constraintBottom_toBottomOf="@id/best_battle_btn"
                    />

                    </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/best_king_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제일 킹받은 콘텐츠"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="13dp"
                app:layout_constraintTop_toBottomOf="@id/best_battle_cl"
                app:layout_constraintStart_toStartOf="parent"
                />
                    <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/best_king_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:listitem="@layout/item_king_content"
                android:orientation="horizontal"
                android:scrollbars="none"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/best_king_tv"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/best_board_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보드에 제일 많이 저장된 콘텐츠"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="13dp"
                app:layout_constraintTop_toBottomOf="@id/best_king_rv"
                app:layout_constraintStart_toStartOf="parent"
        />

            <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/best_board_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_king_content"
        android:orientation="horizontal"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/best_board_tv"
        />

            <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/best_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIP 많은 콘텐츠"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toBottomOf="@id/best_board_rv"
        app:layout_constraintStart_toStartOf="parent"
        />

            <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/best_tip_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_king_content"
        android:orientation="horizontal"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/best_tip_tv"
        />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>