<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/first_bar_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >
        <ProgressBar
            android:id="@+id/first_pb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:indeterminate="false"
            android:max="100"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:progress="0"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            />
        <ProgressBar
            android:id="@+id/second_pb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_marginTop="8dp"
            android:indeterminate="false"
            android:max="100"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:progress="0"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/first_tv"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_bar_cl"
        android:text="나의 흑역사를 담아\n빈칸을 완성해보세요"
        android:layout_marginStart="30dp"
        android:textSize="27sp"
        android:textStyle="bold"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_my_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/first_tv">

        <TextView
            android:id="@+id/first_comment_1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가"
            android:textColor="#000000"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_comment_1_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_comment_1_tv"
            >

            <TextView
                android:id="@+id/first_when_et"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_text"
                android:text=""
                android:textSize="23sp"
                android:imeOptions="actionGo"
                android:textColor="#000000"
                android:singleLine="true"
                android:nextFocusDown="@id/first_where_et"
                android:cursorVisible="false"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/first_comment_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에"
                android:textSize="23sp"
                android:textColor="#000000"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/first_when_et"/>
            <EditText
                android:id="@+id/first_where_et"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_text"
                android:text=""
                android:textSize="23sp"
                android:layout_marginStart="7dp"
                android:cursorVisible="false"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/first_comment_2_tv"
                />
            <TextView
                android:id="@+id/first_comment_3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에서"
                android:textSize="23sp"
                android:layout_marginStart="3dp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@id/first_where_et"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_comment_2_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_comment_1_cl"
            >

            <TextView
                android:id="@+id/first_how_et"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_text"
                android:text=""
                android:textSize="23sp"
                android:textAlignment="center"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/first_comment_4_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서"
                android:textSize="23sp"
                android:textColor="#000000"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/first_how_et"/>
            <EditText
                android:id="@+id/first_what_et"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_text"
                android:text=""
                android:textSize="23sp"
                android:layout_marginStart="7dp"
                android:cursorVisible="false"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:nextFocusDown="@id/first_feel_et"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/first_comment_4_tv"
                />
            <TextView
                android:id="@+id/first_comment_5_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="을 때"
                android:textSize="23sp"
                android:textColor="#000000"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toEndOf="@id/first_what_et"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_comment_3_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_comment_2_cl"
            >
            <TextView
                android:id="@+id/first_comment_6_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나는"
                android:textSize="23sp"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <EditText
                android:id="@+id/first_feel_et"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_text"
                android:text=""
                android:textSize="23sp"
                android:layout_marginStart="7dp"
                android:cursorVisible="false"
                android:imeOptions="actionGo"
                android:singleLine="true"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/first_comment_6_tv"
                />
            <TextView
                android:id="@+id/first_comment_7_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다."
                android:textSize="23sp"
                android:textColor="#000000"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toEndOf="@id/first_feel_et"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="invisible"
        android:id="@+id/first_input_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/first_my_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/first_input_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한가지를 선택해주세요."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_button_cl"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/first_input_info_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/first_select_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@drawable/edt_text"
                android:text="과거"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/first_select_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@drawable/edt_text"
                android:text="현재"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toEndOf="@id/first_select_1_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/first_select_3_tv"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@drawable/edt_text"
                android:text="미래"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toEndOf="@id/first_select_2_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="invisible"
        android:id="@+id/first_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/first_my_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/best_battle_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:src="@drawable/battle_btn"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료하기"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="@id/best_battle_btn"
            app:layout_constraintTop_toTopOf="@id/best_battle_btn"
            app:layout_constraintEnd_toEndOf="@id/best_battle_btn"
            app:layout_constraintBottom_toBottomOf="@id/best_battle_btn"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>