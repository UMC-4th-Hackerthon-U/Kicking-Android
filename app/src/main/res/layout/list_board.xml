<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <GridLayout-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="vertical"-->
<!--        android:columnCount="2"-->
<!--        android:rowCount="2">-->

<!--    </GridLayout>-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:background="@drawable/view_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/iv_jjal1"
            android:layout_width="181dp"
            android:layout_height="102dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic1"
            app:layout_constraintEnd_toStartOf="@+id/iv_jjal2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_jjal2"
            android:layout_width="181dp"
            android:layout_height="102dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic4"
            app:layout_constraintBottom_toTopOf="@id/iv_jjal4"
            app:layout_constraintStart_toEndOf="@+id/iv_jjal1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_jjal3"
            android:layout_width="181dp"
            android:layout_height="102dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic2"
            app:layout_constraintEnd_toStartOf="@+id/iv_jjal4"
            app:layout_constraintTop_toBottomOf="@id/iv_jjal1" />

        <ImageView
            android:id="@+id/iv_jjal4"
            android:layout_width="181dp"
            android:layout_height="102dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic3"
            app:layout_constraintStart_toEndOf="@+id/iv_jjal3"
            app:layout_constraintTop_toBottomOf="@id/iv_jjal2" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="-20dp"
            android:src="@drawable/profile0"
            app:layout_constraintBottom_toBottomOf="@id/iv_jjal3"
            app:layout_constraintStart_toStartOf="@id/iv_jjal3" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="15dp"
            android:text="꿀잼 흑역사 모음"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/iv_profile"
            app:layout_constraintTop_toBottomOf="@id/iv_profile" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>