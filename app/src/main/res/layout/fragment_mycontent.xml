<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nocontent"
        android:text="올릴 때까지 숨 참음!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_nocontent"
        android:layout_marginBottom="24dp"/>

    <ImageView
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:id="@+id/iv_nocontent"
        android:src="@drawable/nocontent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nocontent2"
        android:text="콘텐츠가 없어요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_nocontent"
        android:layout_marginTop="24dp"/>

    <ImageButton
        android:layout_width="174dp"
        android:layout_height="45dp"
        android:id="@+id/btn_makectt"
        android:textColor="@color/white"
        android:background="@drawable/makecontent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nocontent2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>